<header class='sheet-header'>
  <img
    class='profile-img'
    src='{{item.img}}'
    data-edit='img'
    data-action='onEditImage'
    title='{{item.name}}'
  />
  <div class='header-fields'>
    <div class='document-name'>
      <input name='name' type='text' value='{{item.name}}' placeholder='Name' />
    </div>
    {{#if (eq item.type 'gear')}}
      <div class='grid grid-3col'>
        <div class='resource'>
          <label class='resource-label'>Type</label>
          <select name='system.gearType'>
            <option value='gear' {{#if (eq system.gearType 'gear')}}selected{{/if}}>Gear</option>
            <option value='weapon' {{#if (eq system.gearType 'weapon')}}selected{{/if}}>Weapon</option>
            <option value='armor' {{#if (eq system.gearType 'armor')}}selected{{/if}}>Armor</option>
          </select>
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize 'LORE.Item.Gear.FIELDS.quantity.label'}}</label>
          <input
            type='text'
            name='system.quantity'
            value='{{system.quantity}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize 'LORE.Item.Gear.FIELDS.weight.label'}}</label>
          <input
            type='text'
            name='system.weight'
            value='{{system.weight}}'
            data-dtype='Number'
          />
        </div>
      </div>
    {{/if}}
  </div>
</header>