{{! Sheet Header }}
<header class='sheet-header'>
  <img
    class='profile-img'
    src='{{actor.img}}'
    data-edit='img'
    data-action='onEditImage'
    title='{{actor.name}}'
    height='100'
    width='100'
  />
  <div class='header-fields'>
    <div class='document-name'>
      <input
        name='name'
        type='text'
        value='{{actor.name}}'
        placeholder='Name'
      />
    </div>
    {{! The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  }}
    <div class='resources grid grid-3col'>

      {{! "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. }}
      <div class='resource flex-group-center'>
        <label for='system.wounds.value' class='resource-label'>
          {{localize 'LORE.Actor.base.FIELDS.wounds.value.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.wounds.value'
            value='{{system.wounds.value}}'
            data-dtype='Number'
          />
          <span> / </span>
          <label for='system.wounds.max' class='resource-label'>{{system.wounds.max}}</label>
        </div>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='checkbox'
            name='system.unconscious'
            {{#if system.unconscious}}checked{{/if}}
            id='system.unconscious'
          />
          <label for='system.unconscious' class='resource-label'>
              {{localize 'LORE.Actor.base.FIELDS.unconscious.label' 'Unconscious'}}
          </label>
        </div>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='checkbox'
            name='system.stunned'
            {{#if system.stunned}}checked{{/if}}
            id='system.stunned'
          />
          <label for='system.stunned' class='resource-label'>
              {{localize 'LORE.Actor.base.FIELDS.stunned.label' 'Stunned'}}
          </label>
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.fatigue.value' class='resource-label'>
          {{localize 'LORE.Actor.base.FIELDS.fatigue.value.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.fatigue.value'
            value='{{system.fatigue.value}}'
            data-dtype='Number'
          />
          <span> / </span>
          <label for='system.fatigue.max' class='resource-label'>{{system.fatigue.max}}</label>
        </div>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='checkbox'
            name='system.incapacitated'
            {{#if system.incapacitated}}checked{{/if}}
            id='system.incapacitated'
          />
          <label for='system.incapacitated' class='resource-label'>
              {{localize 'LORE.Actor.base.FIELDS.incapacitated.label' 'Incapacitated'}}
          </label>
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.movement' class='resource-label'>
          {{localize 'LORE.Actor.base.FIELDS.movement.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.movement'
            value='{{system.movement}}'
            data-dtype='Number'
            class='center-text'
          />
        </div>
        <label for='system.toughness' class='resource-label'>
          {{localize 'LORE.Actor.base.FIELDS.toughness.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.toughness'
            value='{{system.toughness}}'
            data-dtype='Number'
            class='center-text'
          />
        </div>
        <label for='system.parry' class='resource-label'>
          {{localize 'LORE.Actor.base.FIELDS.parry.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.parry'
            value='{{system.parry}}'
            data-dtype='Number'
            class='center-text'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        {{#if (eq actor.type 'player')}}
          
        {{/if}}
        {{#if (eq actor.type 'pawn')}}
          
        {{/if}}
        {{#if (eq actor.type 'professional')}}
          <label class='resource-label'>
            {{localize 'LORE.Actor.Professional.FIELDS.level.value.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input
              type='text'
              name='system.level.value'
              value='{{system.level.value}}'
              data-dtype='Number'
              class='center-text'
            />
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</header>